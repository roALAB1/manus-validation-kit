#!/bin/sh
# Manus Validation Kit - Pre-commit Hook
# This hook runs validation before each commit

echo "üîç Running Manus Validation..."

# Run code validation in CI mode
npx manus-validate validate --ci

# Capture exit code
VALIDATION_EXIT=$?

if [ $VALIDATION_EXIT -ne 0 ]; then
    echo ""
    echo "‚ùå Validation failed. Commit blocked."
    echo ""
    echo "Fix the issues above or use --no-verify to skip (not recommended)."
    exit 1
fi

echo ""
echo "‚úÖ Validation passed. Proceeding with commit."
exit 0
